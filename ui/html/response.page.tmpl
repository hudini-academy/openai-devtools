{{template "base" .}}
{{define "body"}}
<nav class="logout" >
        {{if .Username}}
        <p>Hey, {{.Username}}!</p>
        {{end}}
        <a href='/home'> Home </a>
       <a href='/user/logout'> Logout </a>
    </nav>
{{end}}
{{define "button"}}
<div class='list-controls'>
        <form method="GET" class="devtools-buttons" action="/debugger">
            <input type="submit" value="Debugger">
        </form>
        <form method="GET" class="devtools-buttons" action="/tester">
            <input type="submit" value="Tester">
        </form>
        <form method="GET" class="devtools-buttons" action="/formatter">
            <input type="submit" value="Formatter">
        </form>
        <form method="GET" class="devtools-buttons" action="/home">
            <input type="submit" value="New">
        </form>
</div>
{{end}}
{{define "response"}}
        <h2>{{.PageLayoutData.Title}}</h2>
            <form method="POST" class="devtools-buttons" action="">
                <input type="hidden" value="{{.PageLayoutData.Title}}" >
                <textarea name="Message" placeholder="Code:-"></textarea>
                <input id="submit-button" type="image" value="Submit" src="/static/image/button.png" />
            </form>    
    <div class="response-section">
      <h2>Prompt: </h2>
          {{if ne .PromptMessage ""}}
        <p>{{.PromptMessage}}</p>
        {{end}}

        <h2>Response: </h2>
       {{if gt (len .Response) 0}}
        <div>{{.Response}}</div>
        {{end}}

    </div> 
{{end}}