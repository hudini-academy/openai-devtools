{{template "base" .}}
{{define "body"}}
{{end}}
{{define "button"}}
<div class='list-controls'>
          <form method="GET" class="devtools-buttons" action="/debugger">
            <input type="submit" value="Debugger">
        </form>
        <form method="POST" class="devtools-buttons" action="/tester">
            <input type="submit" value="Tester">
        </form>
        <form method="POST" class="devtools-buttons" action="/formatter">
            <input type="submit" value="Formatter">
        </form>
        <form method="POST" class="devtools-buttons" action="/newfunction">
            <input type="submit" value="New">
{{end}}
{{define "response"}}
        <h2>Debugger</h2>
            <form method="POST" class="devtools-buttons" action="">
                <input type="hidden" value="Debugger" >
                
                <br></br>
                <textarea name="Message" placeholder="Write your code here.."></textarea>
                <input  id="submit-button" type="submit" value="Submit">
            </form>
    
    <form class="response-section">
        <h2>Your response here</h2>
       {{if ne .Response ""}}
        <p>{{.Response}}</p>
        {{end}}
    </form> 
{{end}}