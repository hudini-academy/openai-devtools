{{template "base" .}}
{{define "body"}}
<nav class="logout" >
        {{if .Username}}
        <p>Hey, {{.Username}}!</p>
        {{end}}
        <a href='/home'> Home </a>
       <a href='/user/logout'> Logout </a>
    </nav>
{{end}}
{{define "button"}}
<div class='list-controls'>
       
        {{range .AllButton}}
         <form method="GET" class="devtools-buttons" action="/customgpt">
         <input type="hidden" name="id" value="{{.ID}}">
            <input type="submit" value="{{.SystemName}}">
        </form>
        {{end}}
        <form method="GET" class="devtools-buttons" action="/rendercustomgpt">
            <input type="submit" value="Custom GPT">
        </form>
</div>
{{end}}
{{define "response"}}
        <h2>{{.PageLayoutData.SystemName}}</h2>
            <form method="POST" class="devtools-buttons" action="">
                <input type="hidden" value="{{.PageLayoutData.SystemName}}" data-id="{{.PageLayoutData.ID}}"> 
                <textarea name="Message" placeholder="Code:-"></textarea>
                <input id="submit-button" type="image" value="Submit" src="/static/image/button.png" />
            </form>    
    <div class="response-section">
      <h2>Prompt: </h2>
          {{if ne .PromptMessage ""}}
        <p>{{.PromptMessage}}</p>
        {{end}}

        <h2>Response: </h2>
       {{if gt (len .Response) 0}}
        <div>{{.Response}}</div>
        {{end}}

    </div> 
{{end}}